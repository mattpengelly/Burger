<div class="container">
    <div class="row justify-content-center">

        <img src="assets/images/burger.jpg">

    </div>

    <div class="row justify-content-center">
        <h1>Burgermaster!</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-4">
            <h2>Unconsumed Burgers!</h2>


            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-2"></div>

        <div class="col-4">
            <h2>Devoured Burgers!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
        </div>

        <button type="submit">Add burger</button>
    </form>
</div>